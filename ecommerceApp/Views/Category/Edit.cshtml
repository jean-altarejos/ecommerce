@model Category

<div>
    <h1>This is Edit Category Page</h1>
    <form asp-controller="Category" asp-action="Edit" method="post">
        <input asp-for="Id" hidden />
        <div class="form-floating mb-3 py-3 col-12">
            <label asp-for="Name" class="form-label ms-2"></label>
            <input asp-for="Name" class="form-control border-0 shadow" />
        </div>
        <div class="form-floating py-3 col-12">
            <label asp-for="DisplayOrder" class="form-label ms-2"></label>
            <input asp-for="DisplayOrder" class="form-control border-0 shadow"/>
        </div>
        <div class="form-floating py-2 col-12">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
        
    </form>
</div>
